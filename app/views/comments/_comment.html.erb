          <% book.comments.each do |comment| %>
            <tr>
              <td><%= comment.user.name %></td>
              <td><%= comment.content %></td>
              <% if comment.user == current_user %>
                <td><%= link_to "Destroy", book_comment_path(book, comment), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" }, remote: true %></td>
              <% else %>
                <td></td>
              <% end %>
            </tr>
          <% end %>