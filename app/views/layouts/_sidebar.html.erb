<h2>User info</h2>
<div class="user-info-box">
  <div class="image-box">
    <%= attachment_image_tag user, :image, format: "jpg", fallback: "noimage.jpg" %>
  </div>
  <table class="table">
    <tr><th>name</th><td><%= user.name %></td></tr>
    <tr><th>introduction</th><td><%= user.introduction %></td></tr>
    <tr><th><%= link_to "Followers", followers_user_path(@user) %></th><td><%= counter(@user.followers.count, "follower") %></td></tr>
    <tr><th><%= link_to "Followings", followings_user_path(@user) %></th><td><%= counter(@user.followings.count, "following") %></td></tr>
  </table>
  <div class="edit-btn">
    <% if user == current_user %>
      <%= link_to "Edit", edit_user_path(user), class: "btn btn-block btn-default" %>
    <% end %>
  </div>
  <div class="follow-btn">
    <%= render "relationships/followbtn", user: user %>
  </div>
</div>
<div class="new-book">
  <h2>New book</h2>
  <%= form_with model: book_new, local: true do |f| %>
    <div class="form-group">
      <%= f.label :title, class: "control-label" %><br>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :opinion, class: "control-label" %><br>
      <%= f.text_area :opinion, class: "form-control" %>
    </div>
    <div class="submit-btn" >
      <%= f.submit "Create Book", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>