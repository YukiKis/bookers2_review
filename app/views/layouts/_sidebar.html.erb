<h2>User info</h2>
<div class="user-info-box">
  <h4>Image</h4>
  <table class="table">
    <tr><th>name</th><td><%= user.name %></td></tr>
    <tr><th>introduction</th><td><%= user.introduction %></td></tr>
  </table>
  <% if user == current_user %>
    <%= link_to "Edit", edit_user_path(user), class: "btn btn-block btn-default" %>
  <% end %>
</div>
<div class="new-book">
  <h2>New book</h2>
  <%= form_with model: book_new, local: true do |f| %>
    <div class="form-group form-inline">
      <%= f.label :title, class: "control-label" %><br>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group form-inline">
      <%= f.label :opinion, class: "control-label" %><br>
      <%= f.text_area :opinion, class: "form-control" %>
    </div>
    <div class="submit-btn" >
      <%= f.submit "Create Book", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>