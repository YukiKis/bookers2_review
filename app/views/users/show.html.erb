<div class="row">
  <div class="col-sm-4">
    <%= render "layouts/sidebar", book_new: @book_new, user: @user %>
  </div>
  <div class="col-sm-8">
    <h2>Books</h2>
    <table class="table table-hover">
      <thead>
        <th class="col-sm-2"></th>
        <th class="col-sm-5">Title</th>
        <th class="col-sm-5">Opinion</th>
      </thead>
      <tbody>
        <% @user.books.each do |book| %>
          <tr>
            <td>Image</td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.opinion %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>