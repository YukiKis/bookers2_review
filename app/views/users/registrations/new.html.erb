<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group form-inline">
    <%= f.label :name, class: "control-label" %><br>
    <%= f.text_field :name, class: "form-control", autofocus: true %>
  </div>
  
  <div class="form-group form-inline">
    <%= f.label :email, class: "control-label" %><br>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group form-inline">
    <%= f.label :password, class: "control-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br>
    <%= f.password_field :password, autocomplete: false, class: "form-control" %>
  </div>
  
  <div class="form-group form-inline">
    <%= f.label :password_confirmation, class: "control-label" %><br>
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: false %>
  </div>

  <div class="submit-button">
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
