<h2><%= @user.name %>'s <%= @title %></h2>
<table class="table table-hover">
  <thead class="row">
    <th class="col-sm-2">Image</th>
    <th class="col-sm-5">Name</th>
    <th class="col-sm-5">Books count</th>
  </thead>
  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= attachment_image_tag resource, :image, :fill, 30, 30, format: "jpg", fallback: "noimage.jpg", size: "30x30" %></td>
        <td><%= link_to resource.name, user_path(resource) %></td>
        <td><%= counter(resource.books.count, "book") %></td>
      </tr>
    <% end %>
  </tbody>
</table>