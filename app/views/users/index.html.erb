<div class="row">
    <div class="col-sm-4">
        <%= render "layouts/sidebar", { book_new: @book_new, user: @user } %>
    </div>
    <div class="col-sm-8">
        <h2>Users</h2>
        <table class="table table-hover users-table">
            <thead class="row">
                <th class="col-sm-2">image</th>
                <th class="col-sm-8">name</th>
                <th class="col-sm-2"></th>
            </thead>
            <tbody>
                <% @users.each do |user| %>
                    <tr>
                        <td><%= attachment_image_tag user, :image, fallback: "noimage.jpg", class: "image-in-table" %></td>
                        <td><%= user.name %></td>
                        <td><%= link_to "Show", user_path(user) %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>