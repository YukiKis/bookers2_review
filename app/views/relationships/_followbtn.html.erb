<% if user != current_user %>
  <% if current_user.following?(user) %>
    <%= link_to "Unfollow", user_relationship_path(user), method: :delete, class: "btn btn-danger btn-block", remote: true %>
  <% else %>
    <%= link_to "Follow", user_relationship_path(user), method: :post, class: "btn btn-primary btn-block", remote: true %>
  <% end %>
<% end %>
