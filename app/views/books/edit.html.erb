<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h2>Editing Book</h2>
    <%= form_with model: @book, local: true do |f| %>
      <div class="form-group">
        <%= f.label :title, class: "control-label" %><br>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :opinion, class: "control-label" %><br>
        <%= f.text_area :opinion, class: "form-control" %>
      </div>
      <div class="submit-btn">
        <%= f.submit "Update", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    <div class="menu">
      <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", request.referer %>
    </div>
  </div>
</div>