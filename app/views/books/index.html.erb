<div class="row">
  <div class="col-sm-4">
    <%= render "layouts/sidebar", book_new: @book_new, user: current_user %>
  </div>
  <div class="col-sm-8">
    <h2>Books</h2>
    <%= form_with scope: :search, url: books_search_path, local: true do |f| %>
      <div class="form-group form-inline">
        <%= f.label "検索方法", for: "search_how", class: "control-label" %>
        <%= f.select :how, ["前方検索", "後方検索", "全検索"], { include_blank: "選択して下さい" }, { class: "form-control" } %>
        <%= f.label :keyword, class: "control-label" %>
        <%= f.text_field :keyword, class: "form-control" %>
        <%= f.submit "Search", class: "btn btn-default" %>
      </div>
    <% end %>
    <table class="table table-hover books-table">
      <thead class="row">
        <th class="col-sm-2"></th>
        <th class="col-sm-5">Title</th>
        <th class="col-sm-5">Opinion</th>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag book.user, :image, fallback: "noimage.jpg", class: "image-in-table" %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.opinion %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>