<div class="row">
  <div class="col-sm-4">
    <%= render "layouts/sidebar", book_new: @book_new, user: current_user %>
  </div>
  <div class="col-sm-8">
    <h2>Books</h2>
    <table class="table table-hover books-table">
      <thead class="row">
        <th class="col-sm-2"></th>
        <th class="col-sm-5">Title</th>
        <th class="col-sm-5">Opinion</th>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag book.user, :image, fallback: "noimage.jpg", class: "image-in-table" %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.opinion %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>